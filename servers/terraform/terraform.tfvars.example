# =============================================================================
# DevStack - Example Terraform Variables
# Copy to terraform.tfvars and customize
# =============================================================================

aws_region        = "us-east-1"
name_prefix       = "devstack"

# VPC/Subnet
vpc_cidr          = "10.0.0.0/16"
subnet_cidr       = "10.0.1.0/24"

# EC2
instance_type     = "t3.xlarge"
root_volume_size  = 100

# SSH - Option 1: Use existing key pair (default: devops9x)
# key_name = "devops9x"

# SSH - Option 2: Create new key from public key file
# public_key_path = "~/.ssh/id_rsa.pub"

# Security - Restrict access (e.g., your office IP)
# allowed_ssh_cidr  = ["YOUR_IP/32"]
# allowed_http_cidr = ["YOUR_IP/32"]
